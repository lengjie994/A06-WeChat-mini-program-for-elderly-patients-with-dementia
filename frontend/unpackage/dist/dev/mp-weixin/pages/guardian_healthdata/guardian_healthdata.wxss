/* 水平间距 */
.show {
  font-size: 80rpx;
  margin-left: 10%;
}
.chart {
  margin-top: 20rpx;
  margin-left: 4%;
  width: 92%;
  height: 50vh;
  border-radius: 15px;
  box-shadow: 1px 1px 2px 2px rgba(125, 125, 125, 0.1);
  background-color: white;
  z-index: 0;
}
.chartbtn {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 100rpx;
}
.chartbtn button {
  height: 80rpx;
  width: 140rpx;
  font-size: 32rpx;
  margin: 0;
}
.charts-box {
  width: 100%;
  height: 40vh;
}
.box {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}
.selectbtn {
  width: 44%;
  height: 20vh;
  margin-left: 4%;
  margin-top: 30rpx;
  background-color: white;
  font-size: 35rpx;
  border-radius: 15px;
  box-shadow: 1px 1px 2px 2px rgba(125, 125, 125, 0.1);
}
.icon {
  width: 100%;
  height: 8vh;
  background-color: white;
  display: flex;
  font-size: 35rpx;
  border-radius: 15px;
}
.selectbtn image {
  margin-top: 35rpx;
  margin-left: 40rpx;
  margin-right: 15rpx;
  width: 50rpx;
  height: 50rpx;
}
.selectbtn text {
  margin-top: 35rpx;
  align-self: baseline;
  font-weight: 800;
}

